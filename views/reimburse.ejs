                                <button
                                class="edit-amount"
                                type="button"
                                x-transition:leave.duration.300ms
                                x-show="!editAmount"
                                x-on:click="editAmount = true">
                                    <img src="/static/images/down-arrow.svg" alt="down-arrow" height="10" width="10">
                                    <span>Edit Amount & Tax</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
