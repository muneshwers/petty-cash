<% if (role == 'basic') {%>
    <div
    x-data="{
        tab : 'transactions',
        currAccount : '<%=account%>',
        accounts : ['muneshwers', 'paragon', 'barges', 'meals'],
        accountTextMap : {
            'muneshwers' : 'Muneshwers',
            'paragon' : 'Paragon',
            'barges' : 'Barges',
            'meals' : 'Meals'
        },
        open : false,
        toggle () {
            if (this.open) {
                this.close()
                return
            }
            this.$refs.button.focus()
            this.open = true
        },
        close (element) {
            if (!this.open) return
            this.open = false
            return 
        },
        swapAccount (account) {

            if (this.currAccount == account) return

            this.currAccount = account
            this.tab = 'transactions'
            this.close()
            setTimeout(() => {
                htmx.ajax('POST', '/account', {
                    target: 'main', 
                    swap:'outerHTML', 
                    values:{
                        account
                    } 
                })   
            }, 250);
            this.swapMain()

        },
        swapMain(){
            this.$refs.main.classList.remove('swappable')
            this.$refs.main.classList.add('outswappable')
        },
        changeTab(newTab){
            this.tab = newTab
            this.swapMain()
        }
        }">
        <header>
            <div class="header-top">
                <div class="header-app-name">
                    <img src="/static/images/nav-bars.svg" height="17px" width="17px" alt="">
                    <img src="/static/images/logo.png" alt="muneshwers logo" height="50px" width="50px">
                    <div class="header-app-title">Petty Cash</div>
                </div>
                <div class="navbar">
                    <div class="account">
                        <button x-ref="button" x-on:click="toggle()">
                            <span x-text="accountTextMap[currAccount]"></span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                fill="currentColor">
                                <path fill-rule="evenodd"
                                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                        <div class="panel" x-show="open" x-transition.duration.300ms.origin.top.left
                            x-on:click.outside="close($refs.button)">
                            <template x-for="account in accounts">
                                <div class="panel-item" x-on:click="swapAccount(account)" x-text="accountTextMap[account]"></div>
                            </template>
                        </div>
                    </div>
                    <nav :class="{'current': tab == 'transactions'}" @click="changeTab('transactions')" hx-trigger="click delay:0.25s"
                        hx-target="main" hx-get="/create_transaction" hx-swap="outerHTML">Create Transactions</nav>
                    <nav :class="{'current': tab == 'reimburse'}" @click="changeTab('reimburse')" hx-trigger="click delay:0.25s"
                        hx-get="/reimburse" hx-target="main" hx-swap="outerHTML">Reimburse</nav>
                    <nav :class="{'current': tab == 'sign'}" @click="changeTab('sign')" hx-trigger="click delay:0.25s"
                        hx-get="/transaction_sign" hx-target="main" hx-swap="outerHTML">Sign</nav>
                    <nav :class="{'current': tab == 'history'}" @click="changeTab('history')" hx-trigger="click delay:0.25s"
                        hx-get="/transaction_history" hx-target="main" hx-swap="outerHTML">History</nav>
                </div>
            </div>
            
        </header>
        <main hx-trigger="load" hx-target="this" hx-swap="outerHTML" hx-get="/create_transaction">
        </main>
    </div>

<% } %>
